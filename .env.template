# ============================================================================
# Restaurant POS System - Environment Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to `.env` in the same directory
# 2. Fill in your actual values (DO NOT commit .env to version control)
# 3. Ensure .env is listed in .gitignore
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MySQL Database Connection Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=restaurant_pos
DB_USER=pos_user
DB_PASSWORD=your_secure_password_here

# Connection Pool Settings (optional)
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30

# ============================================================================
# PRINTER CONFIGURATION
# ============================================================================
# Receipt Printer Settings
RECEIPT_PRINTER_NAME=Receipt Printer
RECEIPT_PRINTER_TYPE=WINDOWS_SPOOLER
# Options: WINDOWS_SPOOLER, ESC_POS, MOCK

# Kitchen Printer Settings
KITCHEN_PRINTER_NAME=Kitchen Printer
KITCHEN_PRINTER_TYPE=WINDOWS_SPOOLER
# Options: WINDOWS_SPOOLER, ESC_POS, MOCK

# ESC/POS Printer Settings (if using direct ESC/POS)
# ESCPOS_PORT=COM3
# ESCPOS_BAUDRATE=9600

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Tax Configuration
TAX_RATE=0.05
# 0.05 = 5% VAT/Sales Tax

# Currency Settings
CURRENCY_SYMBOL=$
CURRENCY_CODE=USD

# Order Settings
AUTO_REFRESH_INTERVAL=5000
# Interval in milliseconds for Kitchen Display auto-refresh

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log File Path
LOG_FILE_PATH=logs/pos_system.log

# Log Level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARN, ERROR

# Log Rotation
LOG_MAX_SIZE_MB=10
LOG_MAX_FILES=5

# ============================================================================
# DEVELOPMENT/TESTING FLAGS
# ============================================================================
# Enable Mock Mode (for testing without hardware)
MOCK_PRINTERS=false
MOCK_DATABASE=false

# Enable Debug Mode
DEBUG_MODE=false

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Session Timeout (in minutes)
SESSION_TIMEOUT=60

# Enable Audit Logging
ENABLE_AUDIT_LOG=true

# ============================================================================
# NOTES:
# - Keep this file secure and never commit actual credentials
# - Use strong passwords for database access
# - Update printer names to match your Windows printer names
# - Adjust tax rate according to your local regulations
# ============================================================================
